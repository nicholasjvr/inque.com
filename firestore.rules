rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any profile, but only write to their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Widgets - users can read all widgets, but only write to their own
    match /widgets/{widgetId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Anyone can read canvas lines, but only logged-in users can create them
    match /canvas-lines/{lineId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Anyone can write to the page_visits collection
    match /page_visits/{visitId} {
      allow create: if true;
    }
    
    // For chats, only authenticated users can read/write messages.
    // This is not fully secure. We can improve this later by tracking participants.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // ADDED: Notifications - users can read/write their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // ADDED: Notes collection - users can read/write their own notes
    match /notes/{noteId} {
      allow read, write: if request.auth != null;
    }

    // ADDED: Quips collection - users can read all quips, but only write to their own
    match /quips/{quipId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Widget Bundles - users can read their own bundles, system controls status updates
    match /widgetBundles/{bundleId} {
      allow read: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
      allow update: if false; // Only system can update status and entrypoints
      allow delete: if request.auth != null && resource.data.ownerUid == request.auth.uid;
    }

  }
} 